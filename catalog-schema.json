{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.flowmatters.com.au/schemas/catalog-schema.json#",
  "title": "Catalog",
  "description": "schema for a catalog of spatial data",
  "type": "object",
  "required": [
    "themes"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "extent":{
      "type":"object",
      "properties":{
        "north":{
          "type":"number"
        },
        "south":{
          "type":"number"
        },
        "east":{
          "type":"number"
        },
        "west":{
          "type":"number"
        }
      }
    },
    "namedHosts": {
      "type": "object",
      "patternProperties": {
        "\\w+": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string"
            },
            "software": {
              "enum": [
                "tds",
                "geoserver",
                "esri",
                "static"
              ]
            }
          }
        }
      }
    },
    "namedIntervals": {
      "type": "object",
      "patternProperties": {
        "\\w+": {
          "$ref": "#/definitions/interval"
        }
      }
    },
    "options": {
      "$ref": "#/definitions/options"
    },
    "publications": {
      "$ref": "#/definitions/publications"
    },
    "themes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "options": {
            "$ref": "#/definitions/options"
          },
          "name": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "publications": {
            "$ref": "#/definitions/publications"
          },
          "layers": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "options": {
                  "$ref": "#/definitions/options"
                },
                "name": {
                  "type": "string"
                },
                "placeholder": {
                  "type": "boolean"
                },
                "description": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "metadataURL": {
                  "type": "string",
                  "format": "uri"
                },
                "publications": {
                  "$ref": "#/definitions/publications"
                }
              }
            }
          }
        }
      }
    },
    "legends": {
      "type": "object",
      "patternProperties": {
        "\\w+": {
          "type": "object",
          "properties": {
            "entries": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "colour": {
                    "type": "string"
                  },
                  "label": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "options": {
      "type": "object",
      "properties": {
        "host": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri"
                },
                "software": {
                  "enum": [
                    "tds",
                    "geoserver"
                  ]
                }
              }
            },
            {
              "type": "string"
            }
          ]
        },
        "filepath": {
          "type": "string"
        },
        "palette": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type":"object",
              "properties":{
                "name": {
                  "type":"string"
                },
                "count": {
                  "type":"number"
                },
                "reverse": {
                  "type":"boolean"
                }
              }
            }
          ]
        },
        "colorscalerange": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "type": "number"
          }
        },
        "legend": {
          "type": "string"
        },
        "mapOptions": {
          "type": "object"
        },
        "timeFormat": {
          "type": "string"
        },
        "publisher": {
          "type": "string"
        },
        "publisherURL": {
          "type": "string",
          "format": "uri"
        },
        "units": {
          "type": "string"
        },
        "vectors": {
          "enum": [
            "point",
            "line",
            "polygon"
          ]
        },
        "smallExtent": {
          "type": "boolean"
        }
      }
    },
    "publications": {
      "type": "array",
      "items": {
        "type": "object",
        "anyOf": [
          {
            "required": [
              "timestep"
            ]
          },
          {
            "required": [
              "label"
            ]
          }
        ],
        "properties": {
          "skip": {
            "type": "boolean"
          },
          "options": {
            "$ref": "#/definitions/options"
          },
          "label": {
            "type": "string"
          },
          "timestep": {
            "enum": [
              "daily",
              "monthly",
              "annual",
              "specific"
            ]
          },
          "timestepMultiplier":{
            "type":"number"
          },
          "timestepReference":{
            "type":"string"
          },
          "minZoom": {
            "type": "number"
          },
          "maxZoom": {
            "type": "number"
          },
          "start": {
            "type": "string",
            "format": "date-time"
          },
          "end": {
            "type": "string",
            "format": "date-time"
          },
          "interval": {
            "$ref": "#/definitions/interval"
          },
          "pointdata": {
            "type":"object",
            "properties": {
              "protocol":{
                "type":"string"
              },
              "url":{
                "type":"string"
              },
              "coordinates":{
                "type":"object"
              },
              "tags":{
                "type":"object"
              }
            }
          }
        }
      }
    },
    "interval": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "step": {
              "type": "number"
            },
            "startYear": {
              "type": "number"
            },
            "startMonth": {
              "type": "number"
            },
            "startDay": {
              "type": "number"
            }
          }
        }
      ]
    }
  }
}