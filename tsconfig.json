{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
   "angularCompilerOptions": {
     "genDir": "codegen",
     "strictMetadataEmit": true,
     "debug": false
   },
   "exclude": [
    "node_modules",
    "scripts/*",
    "dist",
    "**/*.spec.ts"
  ]
}
