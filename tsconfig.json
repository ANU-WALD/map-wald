{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "preserveSymlinks": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "scripts/*",
    "dist",
    "**/*.spec.ts",
    "plotly.js"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "codegen",
    "debug": false
  }
}