{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "preserveSymlinks": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "map-wald/core": [
        "core/src/index-core.ts"
      ],
      "map-wald/visual": [
        "visual/src/index-bootstrap.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "scripts/*",
    "dist",
    "**/*.spec.ts",
    "plotly.js",
    "plotly.js/**/*"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "codegen",
    "debug": false
  }
}
